<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_movie_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fr.utbm.lo52.CustomAndroid.mediacenter.activities.MovieDetailsActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        app:srcCompat="@drawable/ic_menu_movies"
                        android:id="@+id/movie_illustration"
                        android:layout_marginRight="20dp"
                        android:layout_width="120dp"
                        android:layout_height="180dp" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">

                        <TextView
                            android:text="Year:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_year"
                            android:layout_marginTop="12dp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:text="year"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/movie_year" />

                        <TextView
                            android:text="Director:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_director"
                            android:layout_marginTop="12dp"
                            android:textStyle="normal|bold"/>

                        <TextView
                            android:text="director"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/movie_director" />

                        <TextView
                            android:text="Actor(s):"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_actors"
                            android:layout_marginTop="12dp"
                            android:textStyle="normal|bold"/>

                        <TextView
                            android:text="actors"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/movie_actors" />


                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:text="Summary:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_summary"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="12dp"
                    android:textStyle="normal|bold"/>

                <TextView
                            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse ultricies sem in porta fringilla. Vestibulum ante ipsum primis in faucibus orci luctus et ultrices posuere cubilia Curae; Vestibulum id elit sed tortor vestibulum faucibus. Pellentesque eget justo eget diam viverra venenatis. Sed ut hendrerit tortor. Interdum et malesuada fames ac ante ipsum primis in faucibus. Integer vel massa fermentum, scelerisque tortor a, lobortis tortor. Etiam efficitur mollis nisl sit amet hendrerit. Sed blandit tortor commodo, fringilla lacus ac, maximus urna. Sed euismod feugiat nunc, sit amet rutrum nisl laoreet at. Sed eleifend aliquet nisi ornare finibus. Sed sapien felis, sollicitudin quis nulla scelerisque, pellentesque tempus ligula. Phasellus et posuere nunc. Nulla facilisi. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse ultricies sem in porta fringilla. Vestibulum ante ipsum primis in faucibus orci luctus et ultrices posuere cubilia Curae; Vestibulum id elit sed tortor vestibulum faucibus. Pellentesque eget justo eget diam viverra venenatis. Sed ut hendrerit tortor. Interdum et malesuada fames ac ante ipsum primis in faucibus. Integer vel massa fermentum, scelerisque tortor a, lobortis tortor. Etiam efficitur mollis nisl sit amet hendrerit. Sed blandit tortor commodo, fringilla lacus ac, maximus urna. Sed euismod feugiat nunc, sit amet rutrum nisl laoreet at. Sed eleifend aliquet nisi ornare finibus. Sed sapien felis, sollicitudin quis nulla scelerisque, pellentesque tempus ligula. Phasellus et posuere nunc. Nulla facilisi. "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/movie_summary"
                            android:layout_weight="1"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:paddingBottom="20dp" />


            </LinearLayout>
        </ScrollView>

    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:scaleType="center"
        android:elevation="0dp"
        app:srcCompat="@drawable/ic_play"
        android:tint="@color/cardview_light_background"
        android:id="@+id/movie_floatingActionButton_watch"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
